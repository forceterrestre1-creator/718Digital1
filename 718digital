        // Soumettre le formulaire
        function submitForm(e) {
            e.preventDefault();
            
            // R√©cup√©rer toutes les donn√©es du formulaire
            const formData = new FormData(e.target);
            const data = {};
            
            for (let [key, value] of formData.entries()) {
                if (data[key]) {
                    if (Array.isArray(data[key])) {
                        data[key].push(value);
                    } else {
                        data[key] = [data[key], value];
                    }
                } else {
                    data[key] = value;
                }
            }
            
            // Construire le message WhatsApp
            let message = `üéØ *NOUVELLE COMMANDE - 718 DIGITAL*\n\n`;
            message += `üìã *Service:* ${data.service}\n\n`;
            message += `üë§ *CLIENT*\n`;
            message += `Nom: ${data.nom}\n`;
            if (data.entreprise) message += `Entreprise: ${data.entreprise}\n`;
            message += `Email: ${data.email}\n`;
            message += `T√©l√©phone: ${data.telephone}\n\n`;
            
            if (data.budget) message += `üí∞ Budget: ${data.budget}\n`;
            if (data.delai) message += `‚è±Ô∏è D√©lai: ${data.delai}\n\n`;
            
            message += `üìù *D√âTAILS DU PROJET*\n${data.details}\n\n`;
            
            // Ajouter les champs sp√©cifiques
            Object.keys(data).forEach(key => {
                if (!['nom', 'entreprise', 'email', 'telephone', 'service', 'budget', 'delai', 'details', 'source'].includes(key)) {
                    const label = key.replace(/_/g, ' ').toUpperCase();
                    message += `${label}: ${data[key]}\n`;
                }
            });
            
            if (data.source) message += `\nüì¢ Source: ${data.source}`;
            
            // Encoder le message pour WhatsApp
            const whatsappMessage = encodeURIComponent(message);
            const whatsappURL = `https://wa.me/225002250576852723?text=${whatsappMessage}`;
            
            // Ouvrir WhatsApp
            window.open(whatsappURL, '_blank');
            
            // Afficher un message de confirmation
            alert('‚úÖ Merci ! Vous allez √™tre redirig√© vers WhatsApp pour finaliser votre demande.');
            
            // Fermer le modal
            closeModal();
        }
        
        // Ajouter les √©v√©nements aux boutons
        document.addEventListener('DOMContentLoaded', function() {
            // Attacher les √©v√©nements aux boutons "Commander"
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach(button => {
                if (button.textContent.includes('Commander')) {
                    button.addEventListener('click', function(e) {
                        e.preventDefault();
                        const card = this.closest('.pricing-card');
                        const serviceName = card.querySelector('h3').textContent;
                        const section = this.closest('.service-category');
                        
                        let category = 'general';
                        if (section.querySelector('h2').textContent.includes('D√©veloppement Web')) {
                            category = 'web';
                        } else if (section.querySelector('h2').textContent.includes('Design')) {
                            category = 'design';
                        } else if (section.querySelector('h2').textContent.includes('Print')) {
                            category = 'print';
                        } else if (section.querySelector('h2').textContent.includes('Marketing')) {
                            category = 'marketing';
                        } else if (section.querySelector('h2').textContent.includes('Branding')) {
                            category = 'branding';
                        } else if (section.querySelector('h2').textContent.includes('Mobiles')) {
                            category = 'mobile';
                        }
                        
                        openModal(serviceName, category);
                    });
                }
            });
        });
    </script>
